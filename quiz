#  Shuffle order of States
states = list(capitals.keys())
random.shuffle(states)

n = 1
#  Create test Questions
for state in states:
    capital = list(capitals.values())
    q = f"\n\nQuestion number {n}: "
    n += 1
    print(f"{q}\nWhat is the Capital of {state}?")


    def match(state):
        if state in capitals.keys():
            return capitals[state]


    a = random.choice(capital)
    b = capitals[state]
    c = random.choice(capital)
    d = random.choice(capital)

    questions = [a, b, c, d]
    random.shuffle(questions)


    def shuffle():
        questions = [a, b, c, d]
        random.shuffle(questions)
        return questions


    for c, q in enumerate(shuffle()):
        if a != b and a != c and a != d and b != c and b != d and c != d:
            print(f"{c + 1}) {q}")
        else:
            print(f"{c + 1}) {random.shuffle(questions)}")
            continue

